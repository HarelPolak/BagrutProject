<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/gray_200</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/orange_100</item>
        <item name="android:windowBackground">@color/gray_300</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white_100</item>
    </style>

    <style name="TEXT_ON_PRIMARY">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TEXT_ON_OTHER">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="IMAGE_BUTTON_ICON">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="CURVED_BORDER">
        <item name="android:backgroundTint">@color/gray_200</item>
    </style>

    <style name="BottomNavigationTheme" parent="AppTheme">
        <item name="android:background">@color/gray_200</item>
        <item name="colorPrimary">@color/orange_100</item>
    </style>

    <style name="tabLayoutTheme" parent="AppTheme">
        <item name="android:background">@color/gray_300</item>
        <item name="colorPrimary">@color/orange_100</item>
    </style>

    <style name="SPINNER_TITLE" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SPINNER_ITEM" parent="@style/Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>