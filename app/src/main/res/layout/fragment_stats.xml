<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stats.StatsFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="statistics"
        android:textColor="@color/gray_100"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/title_background"/>

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/curved_border">

        <TableRow
            android:layout_width="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="current"
                android:textColor="@color/gray_100"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="best"
                android:textColor="@color/gray_100"
                android:gravity="center" />
        </TableRow>

        <View  android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_600"/>

        <TableRow
            android:layout_width="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="time"
                android:textColor="@color/gray_100"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvCurrentSingle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:00.00"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvBestSingle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:00.00"
                android:gravity="center" />
        </TableRow>

        <View  android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_600"/>

        <TableRow
            android:layout_width="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ao5"
                android:textColor="@color/gray_100"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvCurrentAvg5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:00.00"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvBestAvg5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:00.00"
                android:gravity="center" />
        </TableRow>

        <View  android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_600"/>

        <TableRow
            android:layout_width="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ao12"
                android:textColor="@color/gray_100"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvCurrentAvg12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:00.00"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvBestAvg12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:00.00"
                android:gravity="center" />
        </TableRow>

        <View  android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_600"/>

        <TableRow
            android:layout_width="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="mean"
                android:textColor="@color/gray_100"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvTotalAvg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00:00.00"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:gravity="center" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="history"
        android:textColor="@color/gray_100"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/title_background"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/solveRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"/>


</LinearLayout>